{% extends 'layouts/app.html.twig' %}

{% block title %}Register {{ parent() }}
{% endblock %}

{% block content %}
	<div class="col-6">
		<section>
			<h1 class="d-flex justify-content-center">Registration</h1>
			<!-- Form -->
			<form
				method="POST" action="/register">
				<!-- Firstname input -->
				<div class="mb-3">
					<label for="firstname" class="form-label">First name</label>
					<input type="text" name="firstname" class="form-control" id="firstname" required="required"/>
				</div>
				<!-- Firstname input -->
				<!-- Lastname input -->
				<div class="mb-3">
					<label for="lastname" class="form-label">Last name</label>
					<input type="text" name="lastname" class="form-control" id="lastname" required="required"/>
				</div>
				<!-- Lastname input -->
				<!-- Email input -->
				<div class="mb-3">
					<label for="email" class="form-label">Mail address</label>
					<input type="email" name="email" class="form-control" id="email" required="required"/>
				</div>
				<!-- Email input -->
				<!-- Password input -->
				<div class="mb-3">
					<label for="password" class="form-label">Password</label>
					<input type="password" name="password" class="form-control" id="password" required="required"/>
				</div>
				<!-- Password input -->
				<!-- Submit button -->
				<input
				type="submit" value="Register"/>
			<!-- Submit button -->
			</form>
			<!-- Form -->
			<hr>
			<!-- Register link -->
			<h2>Already registered</h2>
			<div>
				<p>Do not wait any longer :
					<a href="/login">Log in now</a>
				</p>
			</div>
			<!-- Register link -->
		</section>
	</div>
{% endblock %}
